            <artifactId>drools-compiler</artifactId>
            <!--<version>${drools6.version}</version>-->
        </dependency>
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-decisiontables</artifactId>
            <!--<version>${drools6.version}</version>-->
        </dependency>
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-templates</artifactId>
            <!--<version>${drools6.version}</version>-->
        </dependency>

        <!-- log4j -->
