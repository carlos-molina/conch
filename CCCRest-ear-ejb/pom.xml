        <dependency>
            <groupId>org.jboss.spec.javax.ejb</groupId>
            <artifactId>jboss-ejb-api_3.1_spec</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>uk.ac.ncl.tests</groupId>
            <artifactId>CCCRest-ear-commons</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
